<tr style="@rowStyle">
    @foreach (var item in Columns)
    {
        <CascadingValue Value="this" IsFixed="true">
            <CascadingIsFixedCell Item="@Item" 
                                  Field="@item"
                                  OnClick="@OnCellClick">
            </CascadingIsFixedCell>
        </CascadingValue>
    }
</tr>

@code {
    private bool isSelected = false;

    private string rowStyle => isSelected ? "background-color: lightblue;" : "";

    [CascadingParameter]
    public CascadingIsFixedTable ParentTable { get; set; }

    [CascadingParameter]
    public CascadingIsFixedRowCollection ParentRowCollection { get; set; }

    [Parameter]
    public WeatherForecast Item { get; set; }

    [Parameter]
    public List<string> Columns { get; set; }

    [Parameter]
    public Func<Task> OnClick { get; set; }

    Task OnCellClick()
    {
        isSelected = !isSelected;

        return OnClick.Invoke();
    }
}