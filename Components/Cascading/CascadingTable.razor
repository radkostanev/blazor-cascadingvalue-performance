<table class="table">
    <thead>
        <tr>
            @foreach (var item in Columns)
            {
                <th>@item</th>
            }
        </tr>
    </thead>
    <tbody>
        <CascadingValue Value="@this">
            <CascadingRowCollection Data="@Data"
                                    Columns="@Columns"
                                    OnClick="@RefreshComponent"></CascadingRowCollection>
        </CascadingValue>
    </tbody>
</table>

@code {
    private string tableStyle = "color: none";

    [Parameter]
    public List<WeatherForecast> Data { get; set; }

    [Parameter]
    public List<string> Columns { get; set; }

    Task RefreshComponent()
    {
        StateHasChanged();
        return Task.CompletedTask;
    }
}