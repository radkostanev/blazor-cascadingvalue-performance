<td @onclick="@(() => OnClick.Invoke())">
    @switch (Field)
    {
        case "Date":
            @Item.Date.ToShortDateString()
            break;
        case "TemperatureC":
            @Item.TemperatureC
            break;
        case "TemperatureF":
            @Item.TemperatureF
            break;
        case "Summary":
            @Item.Summary
            break;
    }
</td>

@code {
    [CascadingParameter]
    public CascadingTable ParentTable { get; set; }

    [CascadingParameter]
    public CascadingRowCollection ParentRowCollection { get; set; }

    [CascadingParameter]
    public CascadingRow ParentRow { get; set; }

    [Parameter]
    public WeatherForecast Item { get; set; }

    [Parameter]
    public string Field { get; set; }

    [Parameter]
    public Func<Task> OnClick { get; set; }
}