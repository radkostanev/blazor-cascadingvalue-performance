@foreach (var item in Data)
{
    <CascadingValue Value="@this">
        <CascadingRow Item="@item" 
                      Columns="@Columns"
                      OnClick="@OnClick">
        </CascadingRow>
    </CascadingValue>
}

@code {
    [CascadingParameter]
    public CascadingTable ParentTable { get; set; }

    [Parameter]
    public List<WeatherForecast> Data { get; set; }

    [Parameter]
    public List<string> Columns { get; set; }

    [Parameter]
    public Func<Task> OnClick { get; set; }
}