<tr style="@rowStyle">
    @foreach (var item in Columns)
    {
        <Cell ParentTable="@ParentTable" 
              ParentRowCollection="@ParentRowCollection" 
              ParentRow="@this"
              Item="@Item" 
              Field="@item"
              OnClick="@OnCellClick">
        </Cell>
    }
</tr>



@code {
    private bool isSelected = false;

    private string rowStyle => isSelected ? "background-color: lightblue;" : "";

    [Parameter]
    public Table ParentTable { get; set; }

    [Parameter]
    public RowCollection ParentRowCollection { get; set; }

    [Parameter]
    public WeatherForecast Item { get; set; }

    [Parameter]
    public List<string> Columns { get; set; }

    [Parameter]
    public Func<Task> OnClick { get; set; }

    Task OnCellClick()
    {
        isSelected = !isSelected;

        return OnClick.Invoke();
    }
}